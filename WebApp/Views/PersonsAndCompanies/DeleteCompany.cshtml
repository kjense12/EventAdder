@model App.Domain.Company

@{
    ViewData["Title"] = "Delete";
}

<!-- Banner -->
@await Html.PartialAsync("_BackgroundImage")

<h3>Kas oled kindel, et soovid kustutada ürituse nimekirjast?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <div class="row justify-content-center"> <!-- Vertical alignment -->
        <div class="col-md-4"> <!-- Vertical alignment -->
            <dl class="row">
                <dt class = "col-sm-2">
                    Nimi: 
                </dt>
                <dd class = "">
                    @Html.DisplayFor(model => model.CompanyName)
                </dd>
                <dt class = "">
                    Registrikood: 
                </dt>
                <dd class = "">
                    @Html.DisplayFor(model => model.CompanyRegisterCode)
                </dd>
                <dt class = "">
                    Lisa Informatsioon: 
                </dt>
                <dd class = "">
                    @Html.DisplayFor(model => model.AdditionInformation)
                </dd>
                <dt class = "">
                    Maksmine: 
                </dt>
                <dd class = "">
                    @Html.DisplayFor(model => model.PaymentOption)
                </dd>
            </dl>
            <form asp-action="DeleteConfirmedCompany">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a href="~/" onClick="history.go(-1); return false;">Go back</a>
            </form>
        </div>
    </div>
</div>
