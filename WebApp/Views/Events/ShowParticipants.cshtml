@using (Html.BeginForm("CreatePerson", "Events", FormMethod.Post))
{
    <table>
        <tr>
            <td>Isikukood: </td>
            <td>
                @Html.TextBoxFor(m => m.SingularPerson.PersonalIdentificationCode)
            </td>
        </tr>
        <tr>
            <td>Eesnimi: </td>
            <td>
                @Html.TextBoxFor(m => m.SingularPerson.FirstName)
            </td>
        </tr>
        <tr>
            <td>Perekonnanimi: </td>
            <td>
                @Html.TextBoxFor(m => m.SingularPerson.LastName)
            </td>
        </tr>
        <tr>
            <td>LisaInformatsioon: </td>
            <td>
                @Html.TextBoxFor(m => m.SingularPerson.AdditionInformation)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @Html.HiddenFor(m => m.Event.Id)
                <input type="submit" value="Submit"/>
            </td>
        </tr>
    </table>
}



