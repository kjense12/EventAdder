@model WebApp.Controllers.EventsController.CollectionDataModel

@{
    ViewData["Title"] = "Index";
}

 <div class="">
  <img class="img " src="~/images/libled.jpg" alt="Website background image" style="height: 125px; width: 100%; display: block;"/>
 </div>

<h3 style="color: #085ca4">Osavõtjad</h3>

<div>
    <h4>
        @Html.DisplayNameFor(model => model.@Event.EventName) : @Html.DisplayFor(model => model.@Event.EventName)
    </h4>
    <h4>
        @Html.DisplayNameFor(model => model.@Event.EventLocation) : @Html.DisplayFor(model => model.@Event.EventLocation)
    </h4>
    <h4>
        @Html.DisplayNameFor(model => model.@Event.EventTime) : @Html.DisplayFor(model => model.@Event.EventTime)
    </h4>
    @if (Model.Companies != null)
        {
            <h4>
            Osavõtjad :
            </h4>
            @Html.DisplayFor(model => model.Persons);
        }
</div>

<h3 style="color: #085ca4">Osavõtja Lisamine</h3>

