<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/" asp-append-version="true"/>
</head>
<body>
<header>
    
    <!--  Header container -->
    <div class="container" style="height: 100px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3">
            <div class="container-fluid">

                <!--  Header image -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="w-25 p-3">
                        <img src="~/images/logo.svg" class="img" alt="Website logo"/>
                    </div>
                </a>
                <div class="navbar-brand">
                    <a class="navbar-brand" style="color:  #085ca4" asp-area="" asp-controller="Home" asp-action="Index">
                        Avaleht
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Events" asp-action="Create">Ürituse lisamine</a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!--  Symbol image positioned right side of the container -->
            <div class="col d-flex justify-content-end">
                <img src="~/images/symbol.svg" alt="website symbol">
            </div>
        </nav>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- Footer -->
<footer class="page-footer font-small indigo">

    <!-- Footer Links -->
    <div class="container text-left text-md-left" style="background-color: rgba(55,55,55,255);">
        
        <div class="row">
            
            <div class="p-4 col-md-3 mx-auto">
                
                <h5 class="text-light font-weight-bold mt-3 mb-4">Condimentum</h5>

                <ul class="list-unstyled">
                    <li>
                        <p class="text-secondary">
                            Fusce <br/>
                            rutrum <br/>
                            placerat <br/>
                            vestibulum
                        </p>
                    </li>
                </ul>
            </div>

            <hr class="clearfix w-100 d-md-none">
            
            <div class="p-4 col-md-3 mx-auto">

                <h5 class="text-light font-weight-bold mt-3 mb-4">Lacinia</h5>

                <ul class="list-unstyled">
                    <li>
                        <p class="text-secondary">
                            Fusce <br/>
                            rutrum <br/>
                            placerat <br/>
                            vestibulum
                        </p>
                    </li>
                </ul>

            </div>

            <hr class="clearfix w-100 d-md-none">
            
            <div class="p-4 col-md-3 mx-auto">
                
                <!-- First contact column -->
                
                <h5 class="text-light font-weight-bold mt-3 mb-4">Kontakt</h5>
                
                <ul class="list-unstyled">
                    <li>
                        <p class="text-secondary">
                            <span class="text-light"> Peakontor: Tallinnas </span> <br/>
                            Väike- ameerika 1, 11415 Tallinn <br/>
                            Telefon: 605 4450 <br/>
                            Faks: 605 3186
                        </p>
                    </li>
                </ul>

            </div>

            <hr class="clearfix w-100 d-md-none">
            
            <div class="p-4 col-md-3 mx-auto">

                <!-- Footer contact column -->
                <h5 class="text-light font-weight-bold mt-3 mb-4"> <br/> </h5>

                <ul class="list-unstyled">
                    <li>
                        <p class="text-secondary">
                            <span class="text-light"> Harukontor: Võrus </span> <br/>
                            Oja tn 7 (külastusaadress) <br/>
                            Telefon: 605 3330 <br/>
                            Faks: 605 3155
                        </p>
                    </li>
                </ul>

            </div>

        </div>

    </div>

</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
